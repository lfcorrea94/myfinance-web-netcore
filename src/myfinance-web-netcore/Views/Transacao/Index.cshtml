
@{
    ViewData["Title"] = "Transações Financeiras";
}
<h1>@ViewData["Title"]</h1>

@* <button type="button" class="btn btn-block btn-primary" onclick="Novo()">Criar item do Plano de Conta</button> *@

<a 
    class="btn btn-block btn-primary"
    asp-controller="Transacao"
    asp-action="Cadastrar">
    Registrar Transações
</a>

<br>
<br>

<table class="table table-bordered table-dark">

    <tr>
        <th scope="col">Id</th>
        <th scope="col">Historico</th>
        <th scope="col">Tipo</th>
        <th scope="col">Valor</th>
        <th scope="col">Data</th>
        <th scope="col">#</th>
        <th scope="col">#</th>

    </tr>
    @{
        foreach (var item in (List<TransacaoModel>)ViewBag.ListaTransacao)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Historico</td>
                <td>@item.Tipo</td>
                <td>@item.Valor</td>
                <td>@item.Data</td>

                <td>
                    <a class="btn btn-block btn-outline-warning"
                       asp-controller="Transacao"
                       asp-action="Cadastrar"
                       asp-route-id="@item.Id">
                        Editar
                    </a>
                </td>

                <td>
                    <a class="btn btn-block btn-outline-danger"
                       asp-controller="Transacao"
                       asp-action="Excluir"
                       asp-route-id="@item.Id">
                        Excluir
                    </a>
                </td>
                
            </tr>
        }
    }

</table>
